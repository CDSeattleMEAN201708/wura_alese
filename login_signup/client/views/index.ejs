<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Sign Up</h1>
    <form action="/create_user" method="post">
      First Name: <input type="text" name="first_name" required><p></p>
      Last Name: <input type="text" name="last_name" required><p></p>
      Email: <input type="email" name="email" required><p></p>
      <input type="radio" name="gender" value="Male" checked> Male<br>
      <input type="radio" name="gender" value="Female"> Female<br>
      <input type="radio" name="gender" value="Mix of Both"> Mix of Both <p></p>
      <input type="date" name="birthday" max="2006-01-01"><p></p>
      Password: <input type="text" name="password" required><p></p>
      Confirm PS: <input type="text" name="confirm_password" required><p></p>
      <input type="submit" value="Sign Up">
      <% if (errors != ''){ %>
        <% for (var x in errors) { %>
          <p><%= errors[x].message %></p>
        <% } %>
      <% } %>
      <hr>
    </form>

    <h1>Log In</h1>
    <form action="" method="post">
      Email: <input type="text" name="email" required><p></p>
      Password: <input type="password" name="password" required><p></p>
      <input type="submit" value="Log In"><p></p>
      <hr>
    </form>
  </body>
</html>
